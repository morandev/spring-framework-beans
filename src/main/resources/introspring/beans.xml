				    >
		    	    	<constructor-arg
							name="cantidadCilindros"
							value="4"
				    	>
				    	</constructor-arg>
    				</bean>
		    	</property>
		    	<property 
		    		name="carter"
	    		>
    			    <bean
				    	id="carter"
				    	class="beanwithreferences.Carter"
				    >
		    	    	<constructor-arg
							name="volumenAceite"
							value="6.5"
				    	>
